{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["hkg1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron?job=standups",
      "schedule": "0 9 * * 1-5"
    },
    {
      "path": "/api/cron?job=distillation",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron?job=cleanup",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/cron?job=auto-execute",
      "schedule": "0 */4 * * *"
    }
  ]
}
