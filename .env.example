# Thinkus Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# Database
# ============================================
MONGODB_URI=mongodb+srv://your-cluster.mongodb.net/
MONGODB_DB=thinkus

# ============================================
# Authentication
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# ============================================
# AI Services
# ============================================
# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-your-openai-key-here

# ============================================
# Vector Database
# ============================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=thinkus-memory

# ============================================
# Cache & Queue
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Payment (Stripe)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# ============================================
# Storage (Cloudflare R2 / S3)
# ============================================
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=thinkus-artifacts

# ============================================
# Deployment
# ============================================
# Vercel
VERCEL_TOKEN=your-vercel-token

# GitHub
GITHUB_TOKEN=your-github-token

# ============================================
# Monitoring
# ============================================
# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# PostHog (optional)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Service Ports (for local development)
# ============================================
# Main App
PORT=3000

# Microservices
GO_ORCHESTRATOR_PORT=8100
GO_ORCHESTRATOR_GRPC_PORT=50060
PY_AI_ENGINE_PORT=8010
PY_AI_ENGINE_GRPC_PORT=50054
GO_ANALYTICS_PORT=8020
GO_SANDBOX_PORT=8030
